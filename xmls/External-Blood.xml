	<!ELEMENT fecha (#PCDATA)>
	<!ELEMENT Donor (name, surname, bloodType, dob, ssn)>
	<!ELEMENT Donee (name, surname, bloodType, bloodNeeded, dob, ssn)>
	<!ELEMENT name (#PCDATA)>
	<!ELEMENT surname (#PCDATA)>
	<!ELEMENT bloodNeeded (#PCDATA)>
	<!ELEMENT bloodType (#PCDATA)>
	<!ELEMENT dob (#PCDATA)>
	<!ELEMENT ssn (#PCDATA)>
]>

<Blood>
	<amount>500</amount>
	<fecha>2023-05-16</fecha>
